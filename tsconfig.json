{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "src/*": ["./src/*"]
    },
    "typeRoots": ["./types"],
    "types": [
      "node",
      "@wdio/sync",
      "chai",
      "@wdio/cucumber-framework",
      "reflect-metadata"
    ],
    "target": "es5",
    "lib": ["es2018", "dom"],
    "experimentalDecorators": true
  },
  "include": [
    "./types/*.d.ts",
    "node_modules/wdio-visual-regression/build/index.d.ts",
    "node_modules/wdio-viewport-size/typings/index.d.ts",
    "./src/**/*.ts"
  ]
}
